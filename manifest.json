{
	"name": "URL Blocker",
	"version": "1.0",
	"manifest_version": 3,
	"permissions": ["declarativeNetRequest", "storage", "webNavigation"],
	"host_permissions": ["<all_urls>"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"icons": {
		"128": "icon.png"
	},
	"web_accessible_resources": [
		{
			"resources": ["icons/*"],
			"matches": ["<all_urls>"]
		}
	],
	"background": {
		"service_worker": "background.js"
	}
}
